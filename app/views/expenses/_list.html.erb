  <div class="container">
    <div class="col-sm-12 total">
      <span>Total amount:</span> 
      <span>&#36;<%= obj.sum{|expense| expense.amount} %></span>
    </div>
    <% obj.each do |expense| %>
      <div class="col-sm-12 col-md-6">
        <div class="row listings">
        <%= display_image(expense)%>
          <div class="col-sm-7 grey-color">
            <p><%= expense.name %></p>
            <p><%= expense.created_at.day %>-<%= expense.created_at.month %>-<%= expense.created_at.year %> by <%= expense.author.username %></p>
          </div>
          <div class="col-sm-3 bold">&#36;<%= expense.amount %></div>
        </div>
      </div>
    <% end %>
  </div>